{
	"page": {
			"label": "TRANSLATE.PLUGIN_CONFIGURATION"
		},
	"sections": [
	{
		"id": "music_services_shield",
		"element": "section",
		"label": "Music Services Shield",
		"icon": "fa-cog",
		"onSave": {
			"type": "controller",
			"endpoint": "miscellanea/music_services_shield",
			"method": "saveConfig"
		},
		"saveButton": {
			"label": "Save",
			"data": [
				"userCpuSpec",
				"userMpd",
				"userSpotify",
				"rtMpd",
				"rtSpotify",
				"rtPriority"
			]
		},
		"content": [
		{
			"id": "listUserTasks",
			"element": "button",
			"doc": "Lists the tasks already running under the User group",
			"label": "List User Tasks",
			"onClick": {
				"type": "plugin",
				"endpoint": "miscellanea/music_services_shield",
				"method": "listUserTasks"
			}
		},
		{
			"id": "userCpuSpec",
			"element":"select",
			"doc":"Choose the CPUs that will be allocated to the 'user' group for music processes",
			"label":"User Group CPUs",
			"value": {
				"value":"0-0",
				"label":"CPU 0 to 0"
			},
			"options":[
{"value":"0-0","label":"CPU 0 to 0"}
,{"value":"0-1","label":"CPU 0 to 1"}
,{"value":"0-2","label":"CPU 0 to 2"}
,{"value":"1-1","label":"CPU 1 to 1"}
,{"value":"1-2","label":"CPU 1 to 2"}
,{"value":"1-3","label":"CPU 1 to 3"}
,{"value":"2-2","label":"CPU 2 to 2"}
,{"value":"2-3","label":"CPU 2 to 3"}
,{"value":"3-3","label":"CPU 3 to 3"}

]},
		{
			"id": "userMpd",
			"element": "switch",
			"doc": "Include Music Player Daemon (MPD) in the User group",
			"label": "Include MPD in User",
			"value": true
		},
		{
			"id": "userSpotify",
			"element": "switch",
			"doc": "Include Spotify Connect in the User group",
			"label": "Include Spotify Connect in User",
			"value": true
		},
		{
			"id": "rtMpd",
			"element": "switch",
			"doc": "Assign Music Player Daemon (MPD)  Real Time Priority",
			"label": "MPD RT Priority",
			"value": true
		},
		{
			"id": "rtSpotify",
			"element": "switch",
			"doc": "Assign Spotify Connect Real Time Priority",
			"label": "Spotify Connect RT Priority",
			"value": true
		},
		{
			"id": "rtPriority",
			"element": "select",
			"doc": "The priority value for real time priority processes. Max is 99",
			"label": "Real Time Priority",
			"value": {
			  "value": "99",
			  "label": "99"
			},
			"options": [{
				"value": "99",
				"label": "99"
			  },
			  {
				"value": "80",
				"label": "80"
			  },
			  {
				"value": "70",
				"label": "70"
			  },
			  {
				"value": "60",
				"label": "60"
			  },
			  {
				"value": "50",
				"label": "50"
			  },
			  {
				"value": "40",
				"label": "40"
			  },
			  {
				"value": "30",
				"label": "30"
			  },
			  {
				"value": "20",
				"label": "20"
			  },
			  {
				"value": "10",
				"label": "10"
			  }
			]
		  }
		]
  }]
}

